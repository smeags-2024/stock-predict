# Doxyfile basic configuration
PROJECT_NAME           = "Stock Predict"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "Advanced C++ Stock Price Prediction System"

OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@
CREATE_SUBDIRS         = NO

INPUT                  = @CMAKE_SOURCE_DIR@/src @CMAKE_SOURCE_DIR@/include
FILE_PATTERNS          = *.cpp *.h *.hpp *.md
RECURSIVE              = YES

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html

GENERATE_LATEX         = NO

QUIET                  = YES
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES

JAVADOC_AUTOBRIEF      = YES
OPTIMIZE_OUTPUT_FOR_C  = NO

SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO

GENERATE_TREEVIEW      = YES
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
